footer-1(scheme = __default)
    .footer-1
        display: flex
        width: 100vw
        height: auto
        padding: 40px 0 35px
        align-items: center
        justify-content: center
        color: scheme.footer.default
        border-top: 1px solid scheme.border
        background: scheme.footer.background
        z-index: 2
        +min(2)
            height: 360px
        > div
            display: flex
            width: 85%
            min-width: 240px
            +min(2)
                width: 88%
                justify-content: space-between
            +min(3)
                width: 63%
                min-width: 1200px
            +max(2)
                flex-wrap: wrap
            div
                display: flex
                align-items: center
                +max(2)
                    width: 100%
                    justify-content: center
                ul
                    padding-left: 0
                    +max(2)
                        margin-bottom: 10px
                        text-align: center
                    li
                        color: @color
                        font-size: 1rem
                        list-style: none
                &:nth-of-type(1)
                    +max(2)
                        order: 2
                        ul
                            margin-bottom: 25px
                            li
                                display: inline-block
                                margin: 5px 8px
                    +min(3)
                        ul li
                            margin: 0
                            padding: 0 0 8px
                &:nth-of-type(2)
                    flex-direction: column
                    justify-content: center
                    h2
                        color: @color
                        font-size: 1.3rem
                        font-weight: normal
                        letter-spacing: rem(4px)
                        margin-bottom: rem(18px)
                        text-transform: uppercase
                        +min(3)
                            font-size: 1.2em
                            margin-bottom: 15px
                    ul
                        display: flex
                        width: 100%
                        flex-wrap: wrap
                        justify-content: center
                        li
                            display: flex
                            margin: 0 3vw 15px
                            line-height: 1.3
                            flex-direction: column
                            align-items: center
                            text-align: center
                            +min(2)
                                margin: 0 1.3vw
                            +min(3)
                                margin: 0 1.2vw
                            svg
                                width: 66px
                                height: 82px
                                pointer-events: none
                                fill: scheme.footer.vector
                            span
                                font-size: 1rem
                                line-height: 1.2
                &:nth-of-type(3)
                    & th
                        font-size: 1rem
                        text-align: left
                        padding: 0 0 5px
                    td
                        font-size: 1rem
                        margin: 0
                        padding: 0 0 7px
                        line-height: 1
                        vertical-align: top
                        +min(3)
                            font-size: 1rem
                            padding: 0 0 6px
                    svg
                        width: 16px
                        height: 16px
                        margin: 0 6px 0 0
                        padding: 0
                        fill: @color
                        +min(3)
                            width: 15px
                            height: 14px
                    +max(2)
                        order: 3
                        table
                            margin: 10px 0
                            text-align: center
                            tr
                                margin-right: 10px
                                display: inline-table
                                &:last-of-type
                                    margin-right: 0
        { block }
